{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./Dockerfile.backend-only"
  },
  "deploy": {
    "startCommand": "python backend/run_server.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  },
  "variables": {
    "PYTHONOPTIMIZE": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PIP_NO_CACHE_DIR": "1",
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "RAILWAY_DOCKERFILE": "Dockerfile.backend-only"
  },
  "metadata": {
    "description": "FastAPI Backend Only Deployment - Memory Optimized",
    "dockerfile": "Dockerfile.backend-only",
    "deployment_type": "backend_only"
  }
}
